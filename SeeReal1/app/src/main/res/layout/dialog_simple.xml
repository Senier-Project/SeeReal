<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fab_margin"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_simple_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="start"
            android:paddingBottom="16dp"
            android:paddingLeft="24dp"
            android:paddingTop="16dp"
            android:textColor="#000"
            android:textSize="20sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="16dp"
                    android:text="카테고리" />

                <Spinner
                    android:id="@+id/dialog_simple_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="16dp"
                    android:text="날짜" />

                <Button
                    android:id="@+id/dialog_simple_datebtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="16dp"
                    android:text="메모" />

                <android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/dialog_simple_memo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="메모 입력"
                        android:inputType="text"
                        android:textColorHint="#42000000" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="16dp"
                    android:text="금액" />

                <android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/dialog_simple_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="금액 입력"
                        android:inputType="numberDecimal"
                        android:textColorHint="#42000000" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

            <TableRow
                android:id="@+id/dialog_simple_include"
                android:visibility="invisible">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="16dp"
                    android:text="기타" />

                <LinearLayout>

                    <CheckBox
                        android:id="@+id/dialog_simple_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="예산에 포함" />
                </LinearLayout>
            </TableRow>

        </TableLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />
