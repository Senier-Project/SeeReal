<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/kakao_login_button_background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="6dp"
        android:contentDescription="@string/com_kakao_login_image_tts"
        android:src="@drawable/kakao_login_symbol" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/com_kakao_login_button_tts"
        android:gravity="center"
        android:text="@string/com_kakao_login_button"
        android:textColor="@color/com_kakao_brown"
        android:textSize="18dp"
        android:textStyle="bold" />

</LinearLayout>