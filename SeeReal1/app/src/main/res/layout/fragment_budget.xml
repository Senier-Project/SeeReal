<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/budget_no_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예산을 설정해주세요!!"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/budget_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예산 설정"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/budget_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <!--android:visibility="gone" -->

            <!--이미지 + 오늘은 ~원을 쓸수있어요-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_r2"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/budget_image"
                    android:layout_width="15dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="30dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오늘은"
                        android:textSize="20sp" />

                    <!--수정될 text-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/budget_today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="500"
                            android:textSize="27sp"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="원을"
                            android:textSize="20sp" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="쓸 수 있어요 ♡ !"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <!--바뀔 이름-->
                <TextView
                    android:id="@+id/budget_userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="예 지수"
                    android:textSize="25dp"
                    android:textStyle="italic|bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  님의 예산 현황"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#c271de"
                android:padding="2dp"
                android:stretchColumns="1">

                <TableRow
                    android:layout_margin="1dp"
                    android:background="#ffffff">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="총 예산"
                        android:padding="5dp"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/budget_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="right"
                        android:text="500"
                        android:textSize="15dp" />
                </TableRow>

                <TableRow
                    android:layout_margin="1dp"
                    android:background="#ffffff">

                    <TextView
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="남은 예산"
                        android:textSize="15dp" />

                    <TextView
                        android:padding="5dp"
                        android:id="@+id/budget_remain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="500"
                        android:textSize="15dp" />
                </TableRow>

                <TableRow
                    android:layout_margin="0.5dp"
                    android:background="#ffffff">

                    <TextView
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="하루 지출 가능 금액"
                        android:textSize="15dp" />

                    <TextView
                        android:padding="5dp"
                        android:id="@+id/budget_available"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="500"
                        android:textSize="15dp" />
                </TableRow>
            </TableLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"

                android:background="#6a048c" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="카테고리 별 예산 통계"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/budget_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</layout>
