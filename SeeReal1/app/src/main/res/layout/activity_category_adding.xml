<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/cate_add_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark" />

        <LinearLayout

            android:layout_margin="@dimen/screen_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:orientation="horizontal">

                <TableRow
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="이름"

                        android:layout_gravity="center"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/cate_add_name"
                        android:layout_alignParentRight="true"
                        android:hint="커스텀할 카테고리의 이름을 적어주세요 >_ㅇ"
                        android:textSize="15dp" />
                </TableRow>

                <TableRow
                    android:layout_marginBottom="5dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="구분"

                        android:layout_gravity="center"
                        android:textSize="20dp" />

                    <RadioGroup

                        android:id="@+id/cate_add_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/cate_add_in"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="수입" />

                        <RadioButton
                            android:id="@+id/cate_add_ex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="지출" />

                    </RadioGroup>
                </TableRow>

                <TableRow>
                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아이콘"

                        android:layout_gravity="center"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/cate_add_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cate_37" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</layout>